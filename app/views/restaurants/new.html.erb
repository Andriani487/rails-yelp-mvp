<h1 class="mb-4">Add a New Restaurant</h1>

<%= render 'form' %>

<%= form_with model: @restaurant, local: true do |form| %>
  <% if @restaurant.errors.any? %>
    <div class="error messages">
      <h2><%= pluralize(@restaurant.errors.count, "error") %> prohibited this restaurant from being saved:</h2>
      <ul>
        <% @restaurant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :address %><br>
    <%= form.text_field :address %>
  </div>

  <div>
    <%= form.label :phone_number %><br>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :category %><br>
    <%= form.select :category, ['chinese', 'italian', 'japanese', 'french', 'belgian'] %>
  </div>

  <div>
    <%= form.submit  "Create restaurant" %>
  </div>
<% end %>

<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary mt-3" %>
