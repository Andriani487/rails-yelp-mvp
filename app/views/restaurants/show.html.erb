<h1><%= @restaurant.name %></h1>
<p><strong>Address:</strong> <%= @restaurant.address %></p>
<p><strong>Phone:</strong> <%= @restaurant.phone_number %></p>
<p><strong>Category:</strong> <%= @restaurant.category.capitalize %></p>

<hr>

<h2>Reviews</h2>

<% if @restaurant.reviews.any? %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li class="mb-2">
      <strong>Rating:</strong><%= review.rating %>/5<br>
      <%= review.content %>
    </li>
    <% end %>
  </ul>
<% else %>
  <p>No reviews yet.</p>
<% end %>

<hr>

<h2>Add a Review</h2>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, in: 0..5, as: :integer %>
  <%= f.button :submit, "Submit Review", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to all restaurants", restaurants_path, class: "btn btn-secondary mt-3" %>
